{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/ComponentsRoot": [
        "./src/components/index.tsx"
      ],
      "@/UtilsRoot": [
        "./src/utils/index.tsx"
      ],
      "@/StylesRoot": [
        "./src/styles/index.tsx"
      ],
      "@/ConstantsRoot": [
        "./src/constants/index.tsx"
      ],
      "@/LibRoot": [
        "./src/lib/index.tsx"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}